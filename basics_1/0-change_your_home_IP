#!/usr/bin/env bash
# Script that configures Ubuntu server to change localhost and facebook.com resolution

# Backup the original /etc/hosts file
cp /etc/hosts /etc/hosts.backup

# Update /etc/hosts with new IP mappings
# Remove any existing localhost entries and add our custom ones
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Add the new entries
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts